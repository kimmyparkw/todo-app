<%- include('../partials/boilerplate') %>

<div class="form-page">
  <div class="edit">
    <form method="POST" action="/todo/<%= todo.id %>?_method=PUT">
      <input type="text" name="title" value="<%= todo.title %>" placeholder="Title">
      <input type="text" name="description" value="<%= todo.description %>" placeholder="Description">
      <input type="text" name="status" value="<%= todo.status %>" placeholder="Status">
      <input type="submit" value="Edit task">
    </form>
  </div>
  <a href="/todo/<%= todo.id %>"> Back to task</a>
</div>

<%- include('../partials/end') %>
